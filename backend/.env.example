FLASK_APP=app.py
FLASK_ENV=production
PORT=5000
SECRET_KEY=your-secret-key-here

# ============================================
# CRITICAL FOR VERCEL CORS
# ============================================
# Your frontend Vercel deployment URL
FRONTEND_URL=https://your-frontend-name.vercel.app

# Additional allowed URLs (comma-separated)
ALLOWED_ORIGINS=https://preview-frontend.vercel.app

# ============================================
# AUTHENTICATION
# ============================================
# Generate random: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=generate-a-random-secret-key-here

# JWT Token expiration time in hours (default: 24)
JWT_EXPIRATION_HOURS=24

# ============================================
# MONGODB
# ============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=classroomassisstant

# ============================================
# GOOGLE OAUTH (Optional)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
